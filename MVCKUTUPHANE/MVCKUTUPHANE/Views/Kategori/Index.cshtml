
@using MVCKUTUPHANE.Models.Entity
@model List<TBL_KATEGORILER>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>KATEGORİLER</h2>


<table class="table table-bordered">

    <tr>
        <th>KATEGORİ ID</th>
        <th>KATEGORİ AD</th>
        <th>İŞLEM</th>
    </tr>


    @foreach(var x in Model)
    {
        <tr>
            <td>@x.ID</td>
            <td>@x.AD</td>
            <td>
                <a href="/Kategori/Sil/@x.ID" class="btn btn-danger">SİL</a>
                <a href="/Kategori/Getir/@x.ID" class="btn btn-warning">GÜNCELLE</a>
            </td>
        </tr>
    }


</table>


<a href="/Kategori/YeniKategori" class="btn btn-primary">YENİ KATEGORİ</a>