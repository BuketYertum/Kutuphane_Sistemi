
@model MVCKUTUPHANE.Models.Entity.TBL_UYELER

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutPanel.cshtml";
}


<h2>Kütüphane Üye Profil Bilgileri</h2>
<br />

@using (Html.BeginForm("Index2", "KullaniciPaneli", FormMethod.Post))
{

<table class="table table-hover">
    <tr>
        <td><label style="font-weight:bolder"> Mail Adresi : </label> </td>
        <td>  @HttpContext.Current.User.Identity.Name </td>
    </tr>
    <tr>
        <td>
            @Html.TextBoxFor(x => x.AD, new { @class = "form-control" })
        </td>
    </tr>
    <tr>
        <td>
            @Html.TextBoxFor(x => x.SOYAD, new { @class = "form-control" })
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(x => x.KULLANICIADI)
            @Html.TextBoxFor(x => x.KULLANICIADI, new { @class = "form-control" })
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(x => x.SIFRE)
            @Html.TextBoxFor(x => x.SIFRE, new { @class = "form-control" })
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(x => x.FOTO)
            @Html.TextBoxFor(x => x.FOTO, new { @class = "form-control" })
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(x => x.OKUL)
            @Html.TextBoxFor(x => x.OKUL, new { @class = "form-control" })
        </td>
    </tr>
    <tr>
        
        <td> <button class="btn btn-warning">Bilgi Güncelle</button> </td>
    </tr>

</table>

}